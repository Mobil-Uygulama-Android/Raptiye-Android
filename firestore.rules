rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - Kullanıcılar kendi verilerini okuyup yazabilir
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Projects collection - Projeler
    match /projects/{projectId} {
      // Okuma: Giriş yapmış kullanıcılar okuyabilir
      allow read: if request.auth != null;
      
      // Oluşturma: Giriş yapmış kullanıcı kendi user ID'si ile proje oluşturabilir
      allow create: if request.auth != null && 
                       (request.resource.data.userId == request.auth.uid || 
                        request.resource.data.ownerId == request.auth.uid);
      
      // Güncelleme: Sadece proje sahibi güncelleyebilir
      allow update: if request.auth != null && 
                       (resource.data.userId == request.auth.uid || 
                        resource.data.ownerId == request.auth.uid);
      
      // Silme: Sadece proje sahibi silebilir
      allow delete: if request.auth != null && 
                       (resource.data.userId == request.auth.uid || 
                        resource.data.ownerId == request.auth.uid);
    }
    
    // Tasks collection - Görevler
    match /tasks/{taskId} {
      // Okuma: Giriş yapmış kullanıcılar okuyabilir
      allow read: if request.auth != null;
      
      // Oluşturma: Giriş yapmış kullanıcı görev oluşturabilir
      allow create: if request.auth != null;
      
      // Güncelleme: Görev sahibi veya atanan kişi güncelleyebilir
      allow update: if request.auth != null;
      
      // Silme: Görev sahibi silebilir veya projenin sahibi silebilir
      allow delete: if request.auth != null;
    }
    
    // Notifications collection - Bildirimler
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Analytics collection - Analitikler
    match /analytics/{analyticsId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Diğer tüm koleksiyonlar için varsayılan: Erişim yok
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
